	<persistence-unit name="TiendaOnline">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>friki.tienda.com.Persistencia.LineaPedido</class>
		<class>friki.tienda.com.Persistencia.LineaPedidoPK</class>
		<class>friki.tienda.com.Persistencia.Proveedor</class>
		<class>friki.tienda.com.Persistencia.Rol</class>
		<class>friki.tienda.com.Persistencia.UsuarioAdministrador</class>
		<class>friki.tienda.com.Persistencia.Articulo</class>
		<class>friki.tienda.com.Persistencia.Imagen</class>
		<class>friki.tienda.com.Persistencia.Categoria</class>
		<class>friki.tienda.com.Persistencia.TipoProducto</class>
		<class>friki.tienda.com.Persistencia.Pedido</class>
		<class>friki.tienda.com.Persistencia.DireccionEntrega</class>
		<class>friki.tienda.com.Persistencia.Estado</class>
		<class>friki.tienda.com.Persistencia.UsuarioCliente</class>
<!-- 		<exclude-unlisted-classes>false</exclude-unlisted-classes>  -->
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dbfriki" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="toor" />
	</properties>
	
	</persistence-unit>	
	
</persistence>
